<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@drawable/add_new_category_background">
        <set>
            <objectAnimator
                android:propertyName="translationZ"
                android:duration="100"
                android:valueTo="8dp"
                android:valueType="floatType" />
        </set>
    </item>
    <item android:drawable="@drawable/add_new_category_background">
        <set>
            <objectAnimator
                android:propertyName="translationZ"
                android:duration="100"
                android:valueTo="0"
                android:valueType="floatType" />
        </set>
    </item>
</selector>