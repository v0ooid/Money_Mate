<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="358dp"
        android:layout_height="369dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView34">

        <Button
            android:id="@+id/buttonDigitSetup1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/main_color"
            android:fontFamily="@font/manrope_bold"
            android:text="1"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonDigitSetup3"
            android:layout_width="65dp"
            android:layout_height="67dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/main_color"
            android:text="3"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonDigitSetup0"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/main_color"
            android:text="0"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/buttonDigitSetup8"
            app:layout_constraintStart_toStartOf="@+id/buttonDigitSetup8"
            app:layout_constraintTop_toBottomOf="@+id/buttonDigitSetup8" />

        <Button
            android:id="@+id/buttonDigitSetup2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/main_color"
            android:text="2"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonDigitSetup3"
            app:layout_constraintEnd_toStartOf="@+id/buttonDigitSetup3"
            app:layout_constraintStart_toEndOf="@+id/buttonDigitSetup1"
            app:layout_constraintTop_toTopOf="@+id/buttonDigitSetup1" />

        <Button
            android:id="@+id/buttonDigitSetup4"
            android:layout_width="65dp"
            android:layout_height="67dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/main_color"
            android:text="4"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/buttonDigitSetup1"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/buttonDigitSetup1"
            app:layout_constraintTop_toBottomOf="@+id/buttonDigitSetup1" />

        <Button
            android:id="@+id/buttonDigitSetup8"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/main_color"
            android:text="8"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/buttonDigitSetup9"
            app:layout_constraintStart_toEndOf="@+id/buttonDigitSetup7"
            app:layout_constraintTop_toBottomOf="@+id/buttonDigitSetup5" />

        <Button
            android:id="@+id/buttonDigitSetup9"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/main_color"
            android:text="9"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/buttonDigitSetup6"
            app:layout_constraintStart_toStartOf="@+id/buttonDigitSetup6"
            app:layout_constraintTop_toBottomOf="@+id/buttonDigitSetup6" />

        <Button
            android:id="@+id/buttonDigitSetup7"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/main_color"
            android:text="7"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/buttonDigitSetup4"
            app:layout_constraintStart_toStartOf="@+id/buttonDigitSetup4"
            app:layout_constraintTop_toBottomOf="@+id/buttonDigitSetup4" />

        <Button
            android:id="@+id/buttonDigitSetup5"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/main_color"
            android:text="5"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/buttonDigitSetup6"
            app:layout_constraintStart_toEndOf="@+id/buttonDigitSetup4"
            app:layout_constraintTop_toBottomOf="@+id/buttonDigitSetup2" />

        <Button
            android:id="@+id/buttonDigitSetup6"
            android:layout_width="65dp"
            android:layout_height="67dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/main_color"
            android:text="6"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/buttonDigitSetup3"
            app:layout_constraintStart_toStartOf="@+id/buttonDigitSetup3"
            app:layout_constraintTop_toBottomOf="@+id/buttonDigitSetup3" />

        <ImageView
            android:id="@+id/iV4DigitSetupBack"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:tint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/buttonDigitSetup9"
            app:layout_constraintStart_toStartOf="@+id/buttonDigitSetup9"
            app:layout_constraintTop_toBottomOf="@+id/buttonDigitSetup9"
            app:srcCompat="@drawable/outline_arrow_circle_left_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSet4DigitPin">

        <ImageView
            android:id="@+id/dot4DigitSetup1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bd_view_grey_oval"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dot4DigitSetup2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bd_view_grey_oval"
            app:layout_constraintBottom_toBottomOf="@+id/dot4DigitSetup1"
            app:layout_constraintStart_toEndOf="@+id/dot4DigitSetup1"
            app:layout_constraintTop_toTopOf="@+id/dot4DigitSetup1" />

        <ImageView
            android:id="@+id/dot4DigitSetup3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bd_view_grey_oval"
            app:layout_constraintBottom_toBottomOf="@+id/dot4DigitSetup4"
            app:layout_constraintEnd_toStartOf="@+id/dot4DigitSetup4"
            app:layout_constraintTop_toTopOf="@+id/dot4DigitSetup4" />

        <ImageView
            android:id="@+id/dot4DigitSetup4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bd_view_grey_oval"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBackAppLockSetup4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/baseline_arrow_back_ios_new_24"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="32dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btnBackAppLockSetup4"
            android:fontFamily="@font/manrope_bold"
            android:text="Set app lock PIN"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="21dp" />


    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tvSet4DigitPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Set a 4 Digit PIN "
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Try not to forget your PIN. There is no way to recover it if you do"
        android:textColor="@color/Red"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>